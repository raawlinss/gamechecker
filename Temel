  <script>
    // Küçük, gömülü örnek oyun verisi (Demo)
    const GAMES = [
      { id: 'minecraft', name: 'Minecraft', religion: 'Hayır', multiplayer: true, players: 'Değişken (sunucuya bağlı)', mainStory: '—' },
      { id: 'among-us', name: 'Among Us', religion: 'Hayır', multiplayer: true, players: '4–15', mainStory: '—' },
      { id: 'fortnite', name: 'Fortnite', religion: 'Hayır', multiplayer: true, players: '100', mainStory: '—' },
      { id: 'witcher3', name: 'The Witcher 3: Wild Hunt', religion: 'Evet', multiplayer: false, players: '—', mainStory: '50+' },
      { id: 'elden-ring', name: 'Elden Ring', religion: 'Evet', multiplayer: true, players: '2–4 (eşli)', mainStory: '50+' },
      { id: 'halo-infinite', name: 'Halo Infinite', religion: 'Hayır', multiplayer: true, players: '4–12', mainStory: '10–12' },
      { id: 'stardew', name: 'Stardew Valley', religion: 'Hayır', multiplayer: true, players: '1–4', mainStory: '—' },
      { id: 'lol', name: 'League of Legends', religion: 'Hayır', multiplayer: true, players: '10 (5v5)', mainStory: '—' },
      { id: 'cs2', name: 'Counter-Strike 2', religion: 'Hayır', multiplayer: true, players: '10 (5v5)', mainStory: '—' },
      { id: 'ow2', name: 'Overwatch 2', religion: 'Hayır', multiplayer: true, players: '10 (5v5)', mainStory: '—' },
      { id: 'bg3', name: 'Baldur\'s Gate 3', religion: 'Evet', multiplayer: true, players: '1–4', mainStory: '75+' },
      { id: 'gtav', name: 'Grand Theft Auto V', religion: 'Hayır', multiplayer: true, players: '30 (Online)', mainStory: '31–35' },
    ];

    const searchForm = document.getElementById('searchForm');
    const searchInput = document.getElementById('searchInput');
    const suggestions = document.getElementById('suggestions');
    const resultWrap = document.getElementById('resultWrap');
    const notFound = document.getElementById('notFound');

    const gameTitle = document.getElementById('gameTitle');
    const fieldReligion = document.getElementById('fieldReligion');
    const fieldMultiplayer = document.getElementById('fieldMultiplayer');
    const fieldPlayers = document.getElementById('fieldPlayers');
    const fieldMain = document.getElementById('fieldMain');

    // Yardımcı: basit kaçış
    const escapeHtml = (str) => String(str)
      .replaceAll('&', '&amp;').replaceAll('<', '&lt;')
      .replaceAll('>', '&gt;').replaceAll('"', '&quot;')
      .replaceAll("'", '&#039;');

    // Arama ve eşleştirme
    function findMatches(query) {
      const q = query.trim().toLowerCase();
      if (!q) return [];
      return GAMES.filter(g => g.name.toLowerCase().includes(q));
    }

    function showSuggestions(items) {
      if (!items.length) {
        suggestions.classList.add('hidden');
        suggestions.innerHTML = '';
        return;
      }
      suggestions.innerHTML = `
        <ul class="divide-y divide-black/5">
          ${items.slice(0, 8).map(g => `
            <li>
              <button type="button" data-id="${g.id}" class="w-full text-left px-4 py-3 hover:bg-black/5 transition">
                ${escapeHtml(g.name)}
              </button>
            </li>
          `).join('')}
        </ul>
      `;
      suggestions.classList.remove('hidden');

      // Tıklama: inputu doldur ve sonucu göster
      suggestions.querySelectorAll('button[data-id]').forEach(btn => {
        btn.addEventListener('click', () => {
          const id = btn.getAttribute('data-id');
          const game = GAMES.find(g => g.id === id);
          if (game) {
            searchInput.value = game.name;
            suggestions.classList.add('hidden');
            renderResult(game);
          }
        });
      });
    }

    function renderResult(game) {
      if (!game) {
        resultWrap.classList.add('hidden');
        notFound.classList.remove('hidden');
        return;
      }
      notFound.classList.add('hidden');
      gameTitle.textContent = game.name;
      fieldReligion.textContent = game.religion || 'Bilinmiyor';
      fieldMultiplayer.textContent = game.multiplayer ? 'Evet' : 'Hayır';
      fieldPlayers.textContent = game.multiplayer ? (game.players || '—') : '—';
      fieldMain.textContent = game.mainStory || '—';
      resultWrap.classList.remove('hidden');
    }

    function findBest(query) {
      const q = query.trim().toLowerCase();
      if (!q) return null;
      // 1) Tam eşleşme
      let exact = GAMES.find(g => g.name.toLowerCase() === q);
      if (exact) return exact;
      // 2) Başlangıç eşleşmesi
      let starts = GAMES.filter(g => g.name.toLowerCase().startsWith(q));
      if (starts.length === 1) return starts[0];
      if (starts.length > 1) return starts[0];
      // 3) İçeren ilk
      let contains = GAMES.filter(g => g.name.toLowerCase().includes(q));
      return contains[0] || null;
    }

    // Input: yazdıkça öneri + tek eşleşmede otomatik gösterim
    searchInput.addEventListener('input', () => {
      const val = searchInput.value;
      const matches = findMatches(val);
      showSuggestions(matches);

      // Otomatik algılama: tek güçlü eşleşme varsa sonucu göster
      const candidate = findBest(val);
      if (candidate && matches.length === 1) {
        renderResult(candidate);
      } else if (!val.trim()) {
        resultWrap.classList.add('hidden');
        notFound.classList.add('hidden');
      }
    });

    // Gönder: en iyi eşleşmeyi göster
    searchForm.addEventListener('submit', (e) => {
      e.preventDefault();
      suggestions.classList.add('hidden');
      const val = searchInput.value;
      const game = findBest(val);
      renderResult(game);
    });

    // Dışarı tıklayınca öneriyi kapat
    document.addEventListener('click', (e) => {
      if (!searchForm.contains(e.target)) {
        suggestions.classList.add('hidden');
      }
    });

    // Klavye: Esc -> öneri kapat
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') suggestions.classList.add('hidden');
    });
  </script>
